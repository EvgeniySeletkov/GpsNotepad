<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resource="clr-namespace:GpsNotepad.Resources"
             xmlns:local="clr-namespace:GpsNotepad.Controls.Views"
             x:Class="GpsNotepad.Views.LogInPage"
             Style="{StaticResource PageBackground}"
             Title="Log in">

    <!--<NavigationPage.TitleView>
        
        <Label HorizontalOptions="CenterAndExpand"
               Text="{Binding Resource[SignInPageTitle]}"/>

    </NavigationPage.TitleView>-->

    <ContentPage.Content>

        <Grid RowDefinitions="*">

            <StackLayout Grid.Row="0">

                <StackLayout Padding="16, 0, 16, 0">

                    <!--EMAIL-->
                    <Label Style="{StaticResource SubtitleLabel}"
                           Text="Email"
                           Padding="6, 0, 0, 0"/>
                    <Entry PlaceholderColor="#858E9E"
                           Placeholder="Enter email"
                           Keyboard="Email"
                           Text="{Binding Email}"/>

                    <!--PASSWORD-->
                    <Label Style="{StaticResource SubtitleLabel}"
                           Text="Password"
                           Padding="6, 0, 0, 0"
                           Margin="0, 25, 0, 0"/>
                    <!--<local:CustomEntry SubtitleText="Password" 
                                       WrongText="Wrong"/>-->
                    <Entry PlaceholderColor="#858E9E"
                           Placeholder="Enter password"
                           IsPassword="True"
                           Text="{Binding Password}"/>

                    <!--LOG IN BUTTON-->
                    <Button Style="{StaticResource FillButton}"
                            Text="Log in" 
                            Margin="0, 40, 0, 0"
                            Command="{Binding SignInTapCommand}"
                            IsEnabled="{Binding IsButtonEnable}"/>

                    <!--SEPARATOR-->
                    <Grid ColumnDefinitions="0.48*, 0.04*, 0.48*"
                          Margin="0, 14, 0, 0">

                        <BoxView Style="{StaticResource Separator}"
                                 Grid.Column="0"
                                 VerticalOptions="Center"/>

                        <Label Style="{StaticResource SeparatorText}"
                               Text="or"
                               Grid.Column="1"
                               HorizontalOptions="Center"/>

                        <BoxView Style="{StaticResource Separator}"
                                 Grid.Column="2"
                                 VerticalOptions="Center"/>

                    </Grid>

                    <!--ALTERNATIVE LOG IN-->
                    <Grid ColumnDefinitions="*"
                          Margin="0, 14, 0, 0">

                        <Button Style="{StaticResource AlternativeLogInButton}"
                                ImageSource="ic_google.png"
                                Grid.Column="0"
                                IsEnabled="False"/>
                        
                        <Button Style="{StaticResource AlternativeLogInButton}"
                                ImageSource="ic_facebook.png"
                                Grid.Column="1"
                                Command="{Binding SignInWithFacebookTapCommand}"/>
                        
                        <Button Style="{StaticResource AlternativeLogInButton}"
                                ImageSource="{AppThemeBinding Light=ic_apple.png,
                                                              Dark=ic_apple_dark.png}"
                                Grid.Column="2"
                                IsEnabled="False"/>

                    </Grid>
                    
                </StackLayout>

            </StackLayout>
            
        </Grid>
        
    </ContentPage.Content>
</ContentPage>