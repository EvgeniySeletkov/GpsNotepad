<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Name="pin"
             x:Class="GpsNotepad.Views.PinsListTabPage">
    <ContentPage.Content>

        <Grid RowDefinitions="*">

            <StackLayout Grid.Row="0">

                <SearchBar x:Name="searchBar"
                           Placeholder="Search"
                           Text="{Binding SearchText}"/>

                <ListView ItemsSource="{Binding PinViewModelList}"
                          SelectedItem="{Binding SelectedPinViewModel}"
                          HasUnevenRows="True"
                          SelectionMode="Single">

                    <ListView.Behaviors>

                        <prism:EventToCommandBehavior EventName="ItemTapped" 
                                                      Command="{Binding SelectPinCommand}"
                                                      CommandParameter="{Binding .}" />

                    </ListView.Behaviors>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>

                                <ViewCell.ContextActions>
                                    <MenuItem Text="Edit"
                                              Command="{Binding Path=BindingContext.EditPinTapCommand, 
                                                                Source={x:Reference pin}}"
                                              CommandParameter="{Binding .}"/>
                                    <MenuItem Text="Delete"
                                              Command="{Binding Path=BindingContext.DeletePinTapCommand, 
                                                                Source={x:Reference pin}}"
                                              CommandParameter="{Binding .}" />
                                </ViewCell.ContextActions>

                                <ViewCell.View>

                                    <StackLayout Orientation="Horizontal"
                                                 HorizontalOptions="FillAndExpand">

                                        <ImageButton HeightRequest="50"
                                                     WidthRequest="50"
                                                     Margin="10, 0, 0, 0"
                                                     BackgroundColor="Transparent"
                                                     Source="{Binding Image}"
                                                     Command="{Binding Path=BindingContext.PinVisibleChangeTapCommand, 
                                                                       Source={x:Reference pin}}"
                                                     CommandParameter="{Binding .}" />

                                        <StackLayout VerticalOptions="Center" 
                                                         Margin="10, 0, 0, 0">

                                            <Label FontSize="Subtitle"
                                                   FontAttributes="Bold"
                                                   Text="{Binding Label}" />
                                            <Label Text="{Binding Address}" />
                                            <Label Text="{Binding Coordinates}" />

                                        </StackLayout>

                                    </StackLayout>
                                </ViewCell.View>

                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                
            </StackLayout>

            <!--<Label Style="{StaticResource TextStyle}" 
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Text="No profiles added"
                   IsVisible="{Binding HaveNoProfiles}" />-->

            <ImageButton Grid.Row="0" WidthRequest="85"
                         HorizontalOptions="End" VerticalOptions="End"
                         BorderWidth="10" CornerRadius="100"
                         Margin="0,0,20,40" Padding="30"
                         Scale="0.8" BorderColor="#2B3C3C"
                         BackgroundColor="#1E90FF"
                         Source="ic_add.png" 
                         Command="{Binding AddPinTapCommand}"/>

        </Grid>
    </ContentPage.Content>
</ContentPage>